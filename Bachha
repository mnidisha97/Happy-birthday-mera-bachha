<script>
function checkPassword() {
  const input = document.getElementById('passwordInput').value;
  if(input === 'Avisha') {
    document.getElementById('passwordScreen').style.display = 'none';
    document.getElementById('giftScreen').style.display = 'flex';
  } else {
    alert('Wrong password! Try again.');
  }
}

function openGift() {
  document.getElementById('giftBox').style.transform = 'scale(0.8) rotate(20deg)';
  setTimeout(() => {
    document.getElementById('giftScreen').style.display = 'none';
    document.getElementById('cupScreen').style.display = 'flex';
  }, 500);
}

document.getElementById('cup1').addEventListener('click', () => {
  alert('Isme nahi, dure mein apka surprise hai');
});

document.getElementById('cup2').addEventListener('click', () => {
  document.getElementById('cup2').classList.add('flip');
  setTimeout(() => {
    let answer = prompt('Aapko mai kya keh ke bulati hu?');
    if(answer.toLowerCase() === 'bachha') {
      document.getElementById('cupScreen').style.display = 'none';
      document.getElementById('cakeScreen').style.display = 'flex';
    } else {
      alert('Try again!');
    }
  }, 600);
});

function openLetter() {
  document.getElementById('cakeScreen').style.display = 'none';
  document.getElementById('letterScreen').style.display = 'flex';
  document.body.style.background = '#ffe6f0';
  document.getElementById('romanticTune').play();
}
</script>

